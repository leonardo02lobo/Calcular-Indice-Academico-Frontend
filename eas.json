{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "gradleCommand": ":app:clean :app:bundleRelease",
        "buildType": "apk"
      }
    },
    "release": {
      "ios": {
        "workflow": "managed",
        "distribution": "app-store"
      },
      "android": {
        "workflow": "managed"
      },
      "production": {
        "autoIncrement": true
      }
    },
    "submit": {
      "production": {}
    }
  }